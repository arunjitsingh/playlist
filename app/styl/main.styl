@import "../fonts/cantarell/stylesheet.css"
@import "../fonts/sansumi/stylesheet.css"

@import "nib"
@import "aj/colors"
@import "aj/ui"

global-reset()
html5-reset()

//@import "aj/box"  // creates .box-* class rules too.

html, body
  height: 100%
  width: 100%

body
  box: vertical
  font-family: "CantarellRegular", "Open Sans", sans-serif
  overflow: hidden

  header
    background-color: aj-rgba(black, .5)
    border-bottom: 1px solid #f1f1f1
    box: horizontal
    box-align: center
    color: #eee
    height: 50px
    padding: 5px 15px
    text-transform: uppercase
    h1
      // "Playlist" - app name
      color: #fcfcfc
      font-family: "SansumiExtraBoldRegular"
      font-size: 24px
      font-weight: bold
      line-height: 24px
      text-shadow: 0 1px 1px aj-rgba(black, .5)
    h1
    #controls
      box-flex: 1


aj-button-reset()

button
  background-color: transparent
  background-size: 100% 100%
  background-repeat: no-repeat
  cursor: pointer
  color: #555
  display: block
  font-family: "CantarellBold", "Open Sans", sans-serif
  font-size: 14px
  height: 32px
  min-width: 32px;
  padding: 0 10px
  text-transform: uppercase
  transition: all .15s ease-in-out
  &:hover
  &:focus
    background-color: #f1f1f1
    color: #333
  &:focus
    outline: double aj-green
  &:active
    background-color: #e5e5e5
    color: black
    transition-duration: 0


#nowplaying
#controls
  box: horizontal
  color: #eee
  font-size: 14px


#nowplaying
  box-flex: 2
  padding: 0 20px;
  label
    color: #555


#controls
  box-align: center
  box-pack: center
  button
    color: #eee
    text-shadow: 0 1px 1px aj-rgba(black, .5)
    &:hover
    &:focus
      color: #333
    &:hover
    &:focus
    &:active
      text-shadow: none
  #c-play
    // needs to accomodate "Play" and "Pause" without changing width
    width: 75px


#page
  box: horizontal
  box-pack: center
  box-flex: 1
  overflow-x: hidden
  overflow-y: scroll

  #playlist
    margin: 0 auto


#status
  box: horizontal
  box-align: center
  font-size: 12px
  height: 24px
  text-transform: uppercase
  .progress
    box-flex: 3
    height: inherit
    padding: 8px 5px
    .bar
      background-color: aj-rgba(aj-blue, .5)
      height: 8px
      width: 0%
  .message
    box-flex: 1
    padding: 0 10px 0 5px


footer
  background-color: aj-rgba(black, .5)
  border-top: 1px solid #f1f1f1
  box: horizontal
  box-align: center
  box-pack: center
  color: #444
  font-size: 12px
  line-height: 12px
  height: 32px
  text-shadow: 0 1px 1px aj-rgba(white, .5)
  text-transform: uppercase
  .my-copy
    color: #333
    font-family: "CantarellBold", "Open Sans", sans-serif
    //font-weight: bold
  .other
    margin-left: 20px


@import "aj/ui/scrollbars"
@import "playlist"